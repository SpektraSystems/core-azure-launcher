{
  "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json",
  "handler": "Microsoft.Compute.MultiVm",
  "version": "0.1.2-preview",
  "parameters": {
    "basics": [ 
    ],
    "steps": [
      {
        "name": "kubernetesConfig",
        "label": "Azure Kubernetes Service Settings",
        "subLabel": {
          "preValidation": "Configure the infrastructure settings",
          "postValidation": "Done"
        },
        "bladeTitle": "Azure Kubernetes Service Settings",
        "elements": [
          {
            "name": "Clustertype",
            "type": "Microsoft.Common.OptionsGroup",
            "label": "Cluster Type",
            "toolTip":"Choose if you want to deploy CloudBees core in a new AKS Cluster or an existing deployed AKS Cluster ",
            "defaultValue": "New",
            "constraints": {
              "allowedValues": [
                {
                  "label": "Create New",
                  "value": "new"
                },
                {
                  "label": "Use Existing",
                  "value": "existing"
                }
              ],
              "options": {
                "hideExisting": false,
                "hideNone": false
            },
              "required": true
            },
            "visible": true
          },
          {
            "name": "aksClusterName",
            "type": "Microsoft.Common.TextBox",
            "label": "Cluster Name",
            "toolTip":"The name of the Azure Kubernetes Service cluster",
            "defaultValue": "",
            "constraints": {
              "required": true,
              "regex": "^[a-z0-9A-Z-]{3,79}$",
              "validationMessage": "The Name must be between 3 and 79 characters long and contain letters, numbers and hyphens only."
            },
            "visible": true
          },
          {
            "name": "ClusterDNSPrefix",
            "type": "Microsoft.Common.TextBox",
            "label": "Cluster DNS Prefix",
            "toolTip":"DNS prefix to use with hosted Kubernetes API server FQDN. ",
            "defaultValue": "",
            "constraints": {
              "required": true,
              "regex": "^[a-z0-9A-Z-]{3,79}$",
              "validationMessage": "The dns must be between 3 and 79 characters long and contain letters, numbers and hyphens only."
            },
            "visible": "[equals(steps('kubernetesConfig').Clustertype,'new')]"
          },
          {
            "name": "NodeCount",
            "type": "Microsoft.Common.TextBox",
            "label": "Node Count",
            "toolTip":"The number of agent nodes for the cluster.",
            "defaultValue": "3",
            "constraints": {
              "minValue": 1,
              "maxValue": 50,
              "required": true
            },
            "visible": "[equals(steps('kubernetesConfig').Clustertype,'new')]"
          },
          {
            "name": "EnableRBAC",
            "type": "Microsoft.Common.OptionsGroup",
            "label": "Enable RBAC",
            "toolTip":"Enables kubernetes role-based access control which provides fine-grained control over cluster resources.",
            "defaultValue": "",
            "constraints": {
              "allowedValues": [
                {
                  "label": "Yes",
                  "value": "True"
                },
                {
                  "label": "No",
                  "value": "False"
                }
           ],
              "required": true
            },
            "visible": "[equals(steps('kubernetesConfig').Clustertype,'new')]"
          },
          {
            "name": "KubernetesVersion",
            "type": "Microsoft.Common.DropDown",
            "label": "Kubernetes Version",
            "toolTip":"The version of Kubernetes that should be used for this cluster.You will be able to upgrade this version after creating cluster. ",
            "defaultValue": "1.11.2",
            "constraints": {
              "allowedValues": [
                {
                  "label": "1.11.2",
                  "value": "1.11.2"
                },
                {
                  "label": "1.10.6",
                  "value": "1.10.6"
                },
                {
                  "label": "1.9.9",
                  "value": "1.9.9"
                },
                {
                  "label": "1.8.14",
                  "value": "1.8.14"
                },
                {
                  "label": "1.8.11",
                  "value": "1.8.11"
                },
                {
                  "label": "1.8.10",
                  "value": "1.8.10"
                },
                {
                  "label": "1.7.16",
                  "value": "1.7.16"
                },
                {
                  "label": "1.7.15",
                  "value": "1.7.15"
                }
              ],
              "required": true
            },
            "visible": "[equals(steps('kubernetesConfig').Clustertype,'new')]"
          },
          {
            "name": "NodeVirtualMachineSize",
            "type": "Microsoft.Compute.SizeSelector",
            "label": "Node Virtual Machine Size",
            "toolTip": "The size of the virtual machines that will form the nodes in the cluster.This cannot be changed after creating the cluster.",
            "recommendedSizes": [
                "Standard_DS2_v2"
            ],
            "constraints": {
              "required": true,
              "allowedSizes": [
                "Standard_DS11",
                "Standard_DS11_v2",
                "Standard_DS12",
                "Standard_DS12_v2",
                "Standard_DS13",
                "Standard_DS13_v2",
                "Standard_DS14",
                "Standard_DS14_v2",
                "Standard_DS15_v2",
                "Standard_DS2",
                "Standard_DS2_v2",
                "Standard_DS3",
                "Standard_DS3_v2",
                "Standard_DS4",
                "Standard_DS4_v2",
                "Standard_DS5_v2",
                "Standard_F16",
                "Standard_F16s",
                "Standard_F2",
                "Standard_F2s",
                "Standard_F4",
                "Standard_F4s",
                "Standard_F8",
                "Standard_F8s",
                "Standard_G1",
                "Standard_G2",
                "Standard_NC6",
                "Standard_NC12",
                "Standard_NC24",
                "Standard_NC24r",
                "Standard_NV6",
                "Standard_NV12",
                "Standard_NV24",
                "Standard_B1s",
                "Standard_B1ms",
                "Standard_B2s",
                "Standard_B2ms",
                "Standard_B4ms",
                "Standard_B8ms"              
              ]
            },
            "osPlatform": "Linux",
            "count": 3,
            "visible": "[equals(steps('kubernetesConfig').Clustertype,'new')]"
          },
          {
            "name": "ServicePrincipalAppID",
            "type": "Microsoft.Common.TextBox",
            "label": "Service Principal App ID",
            "toolTip":"The client ID of an service principal. ",
            "defaultValue": " ",
            "constraints": {
              "required": true,
              "regex": "^[a-z0-9A-Z-]{3,79}$",
              "validationMessage": "The ID must be between 3 and 79 characters long and contain letters, numbers and hyphens only."
            },
            "visible": "[equals(steps('kubernetesConfig').Clustertype,'new')]"
          },
          {
            "name": "ServicePrincipalSecret",
            "type": "Microsoft.Common.TextBox",
            "label": "Service Principal Secret",
            "toolTip":"The client secret of an service principal. ",
            "defaultValue": "",
            "constraints": {
              "required": true,
              "regex": "^[a-z0-9A-Z-]{3,79}$",
              "validationMessage": "The secret must be between 3 and 79 characters long and contain letters, numbers and hyphens only"
            },
            "visible": "[equals(steps('kubernetesConfig').Clustertype,'new')]"
          }
        ]
      }
    ],
    "outputs": {
        "aksClusterName": "[steps('kubernetesConfig').aksClusterName]",
        "ClusterDNSPrefix":"[steps('kubernetesConfig').ClusterDNSPrefix]",
        "NodeCount":"[steps('kubernetesConfig').NodeCount]",
        "EnableRBAC":"[steps('kubernetesConfig').EnableRBAC]",
        "KubernetesVersion": "[steps('kubernetesConfig').KubernetesVersion]",
        "NodeVirtualMachineSize": "[steps('kubernetesConfig').NodeVirtualMachineSize]",
        "ServicePrincipalAppID": "[steps('kubernetesConfig').ServicePrincipalAppID]",
        "ServicePrincipalSecret": "[steps('kubernetesConfig').ServicePrincipalSecret]",
        "location": "[location()]"
         }
  }
}
